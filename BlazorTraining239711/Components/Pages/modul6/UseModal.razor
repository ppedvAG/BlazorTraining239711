@page "/modal"
<h3>UseModal</h3>
<ModalPPEDV @ref="modal1" Title="Super dollah Dialog!" OnSave="Save">
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Eingabe</label>
        <div class="col-sm-10">

            <input class="form-control" @bind="Eingabe"/>

        </div>
    </div>
</ModalPPEDV>
<button class="btn btn-primary" @onclick="show">launch modal</button>
@code {
    string Eingabe;
    ModalPPEDV modal1;
    void show()
    {
        modal1.Show();
    }
    void Save()
    {
        modal1.Show();
        Eingabe = "";
    }
}
